{
  "kind": "collectionType",
  "collectionName": "productos",
  "info": {
    "singularName": "producto",
    "pluralName": "productos",
    "displayName": "Producto"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nombre": {
      "type": "string"
    },
    "descripcion": {
      "type": "blocks"
    },
    "precio": {
      "type": "decimal"
    },
    "imagen": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "categoria": {
      "type": "string"
    },
    "stock": {
      "type": "boolean",
      "default": true
    },
    "detalle_pedidos": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::detalle-pedido.detalle-pedido",
      "mappedBy": "producto"
    }
  }
}
